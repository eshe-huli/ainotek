
<!-- Page Header -->
<div class="inner-page-header">
	<div class="container">
		<div class="row">

			<!-- Page Title -->
			<div class="col-md-8">
				<h1 class="title">Portfolio - Single project</h1>
				<div class="subtitle">There are many variations of passages </div>
			</div>
			<!-- /Page Title -->

			<!-- Breadcrumbs -->
			<div class="col-md-4">
				<ul class="breadcrumb">
					<li><i class="fa fa-fw fa-home"></i> <a href="#">Home</a></li>
					<li>Blog</li>
				</ul>
			</div>
			<!-- /Breadcrumbs -->

		</div>
	</div>
</div>
<!-- /Page Header -->

<!-- Main -->
<main class="main-container">
    <section id="single-project" class="section section-small">

        <div class="container">
            <div class="row">

                <!-- Project information -->
                <div class="col-sm-5">

                    <h3>Project Details</h3>

                    <ul class="list-lined">
                        <li><i class="icon fa fa-fw fa-user"></i> <span>Client</span> John Joseph Doe</li>
                        <li><i class="icon fa fa-fw fa-briefcase"></i> <span>Company</span> HBO Design Company</li>
                        <li><i class="icon fa fa-fw fa-clock-o"></i> <span>Date</span> 07 Sep 2016</li>
                    </ul>

                    <div class="tags">
                        <a href="#" class="tag">web</a>
                        <a href="#" class="tag">minimal</a>
                        <a href="#" class="tag">gallery</a>
                    </div>

                    <div class="mt"></div>

                    <div class="circle-progress" data-percents="78">
                        <svg width="100" height="100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                            <circle r="49" cx="50" cy="50" fill="transparent" stroke-dashoffset="0"></circle>
                            <circle r="49" cx="50" cy="50" fill="transparent" stroke-dashoffset="0" class="bar"></circle>
                        </svg>
                    </div>

                </div>
                <!-- /Project information -->

                <!-- Project images -->
                <div class="col-sm-7">
                    <div class="img-carousel-pagination owl-carousel owl-theme">
                        <div class="item">
                            <a href="images/project-02.jpg" class="image-popup">
                                <div class="gallery-image">
                                    <%= image_tag("project-02.jpg" , :alt => "") %>
                                </div>
                            </a>
                        </div>
                        <div class="item">
                            <a href="images/project-03.jpg" class="image-popup">
                                <div class="gallery-image">
                                    <%= image_tag("project-03.jpg" , :alt => "") %>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- /Project images -->

            </div>

            <div class="row mt">
                <div class="col-xs-12">

                    <h3>Project Information</h3>
